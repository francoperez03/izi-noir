    "@solana/wallet-adapter-wallets": "^0.19.0",
    "@solana/web3.js": "^1.95.0",
    "@types/three": "^0.182.0",
    "animejs": "^4.3.0",
    "buffer": "^6.0.3",
    "prism-react-renderer": "^2.4.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-router-dom": "^7.12.0",
    "three": "^0.182.0"
