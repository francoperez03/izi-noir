  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "copy:wasm": "mkdir -p public/wasm/web && cp ../sdk/src/wasm/web/arkworks_groth16_wasm.js ../sdk/src/wasm/web/arkworks_groth16_wasm_bg.wasm public/wasm/web/",
